{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {    
      "location": {
        "type": "string",      
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "subnetId":{
        "type": "string",
        "metadata": {
          "description": "ID for the subnet that is linked to the vpn"
        }
      },
    "vpnSKU": {
      "type": "string",      
      "defaultValue": "BASIC",
      "metadata": {
        "description": "VPN SKU"
      }
    },
    "vpnGeneration": {
      "type": "string",      
      "defaultValue": "Generation1",
      "metadata": {
        "description": "VPN Generation"
      }
    }
    },
    "variables":{   
        "rgName":"[resourceGroup().name]",   
        "publicIpVPNAddressName":"[concat(variables('rgName'),'-vpn-publicIp')]",
        "vpnName":"vpn-gateway"
    },
    "resources": [
      {
      "name": "[variables('publicIpVPNAddressName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-06-01",
      "location": "[parameters('location')]",
      "comments": "Public IP for your VPN",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
        }
      },
      {
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2019-12-01",
            "name": "[variables('vpnName')]",
            "location": "[parameters('location')]",
            "properties": {
                "enablePrivateIpAddress": false,
                "ipConfigurations": [
                    {
                        "name": "default",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpVPNAddressName'))]"
                            },
                            "subnet": {
                                "id": "[parameters('subnetId')]"//4
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "[parameters('vpnSKU')]",
                    "tier": "[parameters('vpnSKU')]"
                },
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": false,
                "activeActive": false,
                "vpnClientConfiguration": {
                    "vpnClientAddressPool": {
                        "addressPrefixes": [
                            "172.16.10.0/24"
                        ]
                    },
                    "vpnClientProtocols": [
                        "SSTP"
                    ],
                    "vpnClientRootCertificates": [
                        {
                            "name": "P2SRootCert",
                            "properties": {
                                "publicCertData": ""
                            }
                        }
                    ],
                    "vpnClientRevokedCertificates": [],
                    "radiusServers": [],
                    "vpnClientIpsecPolicies": []
                },
                "vpnGatewayGeneration": "[parameters('vpnGeneration')]"
            }
        }
    
    ],
    "outputs": {      
    }
  }